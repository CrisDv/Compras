<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6E4AF"
    android:gravity="center|center_horizontal"
    android:orientation="vertical"
    tools:context=".Recognition.Voice">

    <Button
        android:id="@+id/NombreVoz"
        android:layout_width="319dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10px"
        android:background="@drawable/botonradius"
        android:backgroundTint="#B31414"
        android:fontFamily="serif"
        android:text="Nombre del Producto"
        android:textColor="#FFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/PrecioVoz"
        android:layout_width="319dp"
        android:layout_height="106dp"
        android:layout_gravity="center"
        android:layout_marginBottom="300dp"
        android:background="@drawable/botonradius"
        android:backgroundTint="#BA1919"
        android:fontFamily="serif"
        android:text="Precio del Producto"
        android:textColor="#FFF"
        android:textSize="18sp" />

</LinearLayout>