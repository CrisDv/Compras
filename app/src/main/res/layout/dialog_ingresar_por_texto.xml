<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C31E1E"
    android:orientation="vertical"
    tools:context=".FrDialog.IngresarPorTexto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:inputType="text"
        android:text="ESCRIBE EL NOMBRE DE EL PRODUCTO"
        android:textColor="#FFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/DialoogNombreProducto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/botonradius"
        android:backgroundTint="#FDFCFC"
        android:fontFamily="serif"
        android:textColor="#000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:background="#C61E1E"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="ESCRIBE EL PRECIO (Su costo en Libras o Unidades)"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/DialogPrecioProducto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/botonradius"
        android:backgroundTint="#FDFDFD"
        android:fontFamily="serif"
        android:inputType="number"
        android:textColor="#000"  />

