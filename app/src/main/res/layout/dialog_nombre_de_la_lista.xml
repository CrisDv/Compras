<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="#BA1313"
    android:orientation="vertical"
    tools:context=".FrDialog.IngresarPresupuesto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:textColor="#FFF"
        android:text="Ingresa el nombre de la lista"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/NombreDeLista"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/botonradius"
        android:backgroundTint="#FFFCFC"
        android:gravity="center"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="serif"
        android:textColor="#FFF"
        android:gravity="center"
        android:text="Ingresa el nombre del Almacen, tienda o mercado"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/NombreDelAlmacen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/botonradius"
        android:backgroundTint="#FAF5F5"
        android:gravity="center"
        android:inputType="text" />
</LinearLayout>