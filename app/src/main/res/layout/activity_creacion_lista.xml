<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE9E1"
    android:gravity="center"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".CreacionLista">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/checklist"
            app:lottie_speed="2" />

    </LinearLayout>

    <Button
        android:id="@+id/CrearLista"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_above="@+id/ListaYaCreada"
        android:layout_gravity="center"
        android:layout_marginBottom="220dp"
        android:text="CREAR LISTA" />


    <ImageView
        android:id="@+id/ImagenInicio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        app:srcCompat="@drawable/photo4951865291495811277"
        tools:srcCompat="@drawable/photo4951865291495811277" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#171616"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Universidad Distrital Francisco JosÃ© de Caldas"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF" />
</LinearLayout>