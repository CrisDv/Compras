<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDE9B3"
    android:gravity="center"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".CreacionLista">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ToolbarCreacionLista"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2E2EB1">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F1B4">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/checklist"
            app:lottie_speed="2" />

    </LinearLayout>

    <Button
        android:id="@+id/CrearLista"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_above="@+id/ListaYaCreada"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp"
        android:background="@drawable/botonradius"
        android:backgroundTint="#B31414"
        android:fontFamily="serif"
        android:text="CREAR LISTA"
        android:textColor="#FFF" />


    <ImageView
        android:id="@+id/ImagenInicio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:src="@drawable/iconoapp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#171616"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Universidad Distrital Francisco JosÃ© de Caldas"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#000" />
</LinearLayout>